<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="#464646" />
            <solid
                android:color="#6aededed" />
            <corners android:radius="4dp" />
            <padding
                android:bottom="4dp"
                android:left="12dp"
                android:right="12dp"
                android:top="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="#707070" />
            <solid android:color="#00ffffff" />
            <corners android:radius="4dp" />
            <padding
                android:bottom="4dp"
                android:left="12dp"
                android:right="12dp"
                android:top="4dp" />
        </shape>
    </item>
</selector>